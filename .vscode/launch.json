    "version": "0.2.0",
    "configurations": [

        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "MainGameLoop",
            "request": "launch",
            "mainClass": "engineTester.MainGameLoop",
            "projectName": "GameEngine",
            "vmArgs": "-Djava.library.path=${workspaceFolder}\\lib\\natives",
            "classPaths": [
                "${workspaceFolder}/bin",
                "${workspaceFolder}/lib/jars/lwjgl.jar",
                "${workspaceFolder}/lib/jars/lwjgl_util.jar",
                "${workspaceFolder}/lib/jars/slick-util.jar",
            ]
        }
    ]
}